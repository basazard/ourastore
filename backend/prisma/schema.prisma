generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  fullname String
  username String @id @unique
  password String
  email String @unique
  phone String
  createdAt DateTime @default(now())
  updatedAt DateTime? 
}

model Category {
  id String @id @unique
  description String
  services Service[]
}

model Service {
  id String @id @unique
  description String
  category Category @relation(fields: [categoryId], references: [id])
  categoryId String
  items Item[]
  storage Storage?
}

model Cart {
  id String @id @unique
  itemId String
  item Item @relation(fields: [itemId], references: [id])
  itemCount Int
  gameId String
  server String?
}

model Item {
  id String @id @unique
  gameCash Int
  price Int
  description String
  service Service @relation(fields: [serviceId], references: [id])
  serviceId String
  carts Cart[]
}

model Storage {
  id String @id @unique
  stock Int
  service Service @relation(fields: [serviceId], references: [id])
  serviceId String @unique
}

model Promo {
  id String @id @unique
  description String
  type String
  discountAmount Int?
  fixedAmount Int?
  startDate DateTime
  endDate DateTime
}