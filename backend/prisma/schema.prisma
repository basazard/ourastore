generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum CategoryType {
  JOKI
  TOP_UP
  PULSA
  VOUCHER
  TAGIHAN
}

model User {
  fullname String
  username String @id @unique
  password String
  email String @unique
  phone String @unique 
  role Role @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime? 
}

model Category {
  id String @id @default(uuid())
  name String @unique
  type CategoryType
  services Service[]
}

model Service {
  id String @id @default(uuid())
  name String @unique
  owner String
  instruction String
  imageName String?
  categoryId String
  category Category @relation(fields: [categoryId], references: [id])
}

model Assets {
  id String @id @default(uuid())
  assetName String @unique
  assetCodedName String 
}
